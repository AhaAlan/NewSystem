#sql("personInfoForCollection")
SELECT
	collection.* ,topic.title,category.`name`
FROM
	collection,
	topic ,
	category
WHERE
	collection.userId = #para(0)
	AND collection.topicId = topic.id  and topic.categoryId=category.id
ORDER BY
	collectionTime DESC
#end

