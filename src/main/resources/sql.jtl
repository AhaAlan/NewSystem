#sql("hotTopic")
SELECT
  topic.*, IFNULL(t.reply_count, 0) AS reply_count,
             category. NAME AS category_name
FROM
  topic
  LEFT JOIN
  (SELECT
     topicId,
     COUNT(id) AS reply_count
   FROM
     reply
   GROUP BY
     topicId )
    AS T
    ON topic.id = T.topicId
  INNER JOIN category ON topic.categoryId = category.id
ORDER BY
  reply_count DESC
  LIMIT 12
#end